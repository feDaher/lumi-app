{
  "expo": {
    "name": "Lumi",
    "slug": "lumi-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "lumi-app",
    "splash": {
      "image": "./assets/fundo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Precisamos da sua localização para usar este app.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Precisamos da sua localização mesmo em segundo plano para manter suas funções de segurança.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "icon": "./assets/icon.png",
      "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION", "ACCESS_BACKGROUND_LOCATION"],
      "softwareKeyboardLayoutMode": "resize"
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      "expo-router",
      "expo-location"
    ]
  }
}
